{{#partial "content"}}

<link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
      {{#if editHero}}
         <h1>Edit this Hero!</h1>
         <form action="/heroes/{{editHero.id}}/update" method="post">
             <label for="name">Edit this hero's name</label>
             <input id="name" name="name" type="text" value="{{editHero.name}}"><br>
<label for="age">Edit this hero's age</label>
             <input id="age" name="age" type="text" value="{{editHero.age}}"><br>
<label for="power">Edit this hero's power</label>
             <input id="power" name="power" type="text" value="{{editHero.power}}"><br>
<label for="weakness">Edit this hero's weakness</label>
             <input id="weakness" name="weakness" type="text" value="{{editHero.weakness}}"><br>
       {{else}}

   <h1>Add a new Hero!</h1>

   <form class="well" action="/heroes/new" method="post">
       <label for="name">Hero's name</label>
       <input id="name" name="name" type="text"><br>
       <label for="age">Hero's age</label>
       <input id="age" name="age" type="text"><br>
       <label for="power">Hero's power</label>
       <input id="power" name="power" type="text"><br>
       <label for="weakness">Hero's weakness</label>
       <input id="weakness" name="weakness" type="text"><br>
{{/if}}
       <button type="submit" class="btn btn-default">Add Hero</button>
   </form>
   <style>
   input[type=text]{
       border: none;
       border-bottom: 2px solid;
       background: transparent;
       outline: none;
       height: 40px;
       color: purple;
   }
   </style>

{{/partial}}

{{> layout.hbs}}